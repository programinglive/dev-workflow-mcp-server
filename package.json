{
  "name": "@programinglive/dev-workflow-mcp-server",
  "version": "1.1.15",
  "description": "MCP server to enforce development workflow discipline",
  "type": "module",
  "main": "index.js",
  "bin": {
    "dev-workflow-mcp": "index.js"
  },
  "scripts": {
    "build": "vite build",
    "dev": "node --watch index.js",
    "start": "node index.js",
    "local": "node index.js",
    "test": "node --test",
    "check": "node --check index.js",
    "prepare": "husky",
    "postinstall": "node install.js",
    "release": "standard-version",
    "release:major": "node release-wrapper.js major",
    "release:minor": "node release-wrapper.js minor",
    "release:patch": "node release-wrapper.js patch",
    "web": "node web/server.js"
  },
  "keywords": [
    "mcp",
    "workflow",
    "development",
    "discipline"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/programinglive/dev-workflow-mcp-server.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.8.0",
    "esbuild": "^0.25.0",
    "get-port": "^7.1.0",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0",
    "vite": "^7.1.12"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@programinglive/commiter": "^1.1.0"
  },
  "standard-version": {
    "releaseCommitMessageFormat": "chore(release): {{currentTag}} 🚀",
    "types": [
      {
        "type": "feat",
        "section": "✨ Features"
      },
      {
        "type": "fix",
        "section": "🐛 Bug Fixes"
      },
      {
        "type": "perf",
        "section": "⚡ Performance"
      },
      {
        "type": "refactor",
        "section": "♻️ Refactors"
      },
      {
        "type": "docs",
        "section": "📝 Documentation"
      },
      {
        "type": "style",
        "section": "💄 Styles"
      },
      {
        "type": "test",
        "section": "✅ Tests"
      },
      {
        "type": "build",
        "section": "🏗️ Build System"
      },
      {
        "type": "ci",
        "section": "👷 Continuous Integration"
      },
      {
        "type": "chore",
        "section": "🧹 Chores"
      },
      {
        "type": "revert",
        "section": "⏪ Reverts"
      }
    ]
  }
}
