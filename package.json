    "watch:web": "npm run dev --prefix web",
    "postbuild": "node scripts/build-docs.js",
    "dev": "node --watch index.js",
    "start": "node index.js",
    "local": "node index.js",
    "test": "node --test",
    "check": "node --check index.js",
    "prepare": "husky",
    "postinstall": "node install.js",
    "release": "node scripts/release.cjs",
    "release:major": "node scripts/release.cjs major",
    "release:minor": "node scripts/release.cjs minor",
    "release:patch": "node scripts/release.cjs patch",
    "web": "npm start --prefix web"
  },
